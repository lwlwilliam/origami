namespace App;

$items = ["苹果", "香蕉", "橙子"];
$showList = false;
$userName = "张三";
$isLoggedIn = false;

$ok = () => {
    return false
}

// 测试Vue风格的if-else-if-else
$vueStyleResult = <div>
   <h2 if='$ok()'>列表显示中</h2>
   <h2 else-if='$userName'>用户已登录</h2>
   <h2 else>其他情况</h2>
   
   <p if='$isLoggedIn'>您已登录</p>
   <p else>未登录状态</p>

   <div for="$item in $items">{$item}</div>
</div>;
echo "Vue风格If-Else-If-Else测试:\n";
echo $vueStyleResult . "\n\n";