namespace tests;

class ParentClass {
    public $message = "Hello from parent";
    
    public function __construct($msg) {
        $this->message = $msg;
    }
    
    public function getMessage() {
        return $this->message;
    }
    
    public function parentMethod() {
        return "Parent method called";
    }
}

class ChildClass extends ParentClass {
    public function __construct($msg) {
        parent::__construct($msg);
    }
    
    public function testParentAccess() {
        // 测试 parent:: 方法调用
        $result1 = parent::parentMethod();
        if ($result1 != "Parent method called") {
            Log::fatal('parent:: 方法调用失败');
        }
        
        // 测试 parent 属性访问
        $result2 = parent::$message;
        if ($result2 != "Hello from parent") {
            Log::fatal('parent:: 属性访问失败');
        }
        
        Log::info('parent:: 语法测试通过');
    }
}

// 测试
$child = new ChildClass("Test message");
$child->testParentAccess(); 