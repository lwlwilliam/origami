<?php
// 反射模块测试

class User {
    public $name;
    public $age;

    public function __construct($name, $age) {
        $this->name = $name;
        $this->age = $age;
    }

    public function setName($name) {
        $this->name = $name;
    }

    public function getName() {
        return $this->name;
    }

    public function getAge() {
        return $this->age;
    }
}

echo "=== 反射模块测试 ===\n";

// 创建反射实例
$reflect = new Reflect();

// 测试获取类信息
echo "--- User类信息 ---\n";
echo $reflect->getClassInfo("User");

echo "\n--- 列出User类的方法 ---\n";
echo $reflect->listMethods("User");

echo "\n--- 列出User类的属性 ---\n";
echo $reflect->listProperties("User");

echo "\n--- 获取特定方法信息 ---\n";
echo $reflect->getMethodInfo("User", "SetName");

echo "\n--- 列出所有可用类 ---\n";
echo $reflect->listClasses();

echo "\n反射模块测试完成\n";
?> 