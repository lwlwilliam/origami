{
  "name": "origami-language-support",
  "displayName": "Origami Language Support",
  "description": "Language support for Origami programming language",
  "version": "1.0.0",
  "publisher": "origami-lang",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "origami",
    "language",
    "syntax",
    "highlighting"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "origami",
        "aliases": [
          "Origami",
          "origami"
        ],
        "extensions": [
          ".cjp",
          ".origami"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/origami-light.svg",
          "dark": "./icons/origami-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "origami",
        "scopeName": "source.origami",
        "path": "./syntaxes/origami.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "origami",
        "path": "./snippets/origami.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Origami Language Server",
      "properties": {
        "origami.lsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用 Origami 语言服务器"
        },
        "origami.lsp.serverPath": {
          "type": "string",
          "default": "origami-lsp",
          "description": "LSP 服务器可执行文件路径"
        },
        "origami.lsp.trace": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "LSP 通信跟踪级别"
        }
      }
    },
    "commands": [
      {
        "command": "origami.restartLanguageServer",
        "title": "重启语言服务器",
        "category": "Origami"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:origami"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5",
    "vsce": "^2.10.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/php-any/origami.git"
  },
  "bugs": {
    "url": "https://github.com/php-any/origami/issues"
  },
  "homepage": "https://github.com/php-any/origami#readme",
  "license": "MIT"
}